{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules", "coverage", "dist", ".vscode"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noUselessElse":"off"
      },
      "performance": {
        "noDelete":"off"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "useLiteralKeys": "off"
      }
    }
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  }
}
